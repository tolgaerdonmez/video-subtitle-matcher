{
	"name": "video-subtitle-matcher",
	"version": "1.0.0",
	"description": "A tool for matching video & subtitle names",
	"productName": "Video & Subtitle Filename Matcher",
	"main": "main.js",
	"author": "Tolga Erdonmez",
	"license": "MIT",
	"scripts": {
		"start": "electron .",
		"package:mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --icon=assets/icons/mac/icon.icns --prune=true --out=release-builds",
		"package:win": "electron-packager . --overwrite --platform=win32 --arch=ia32 --icon=assets/icons/windows/icon.ico --prune=true --out=release-builds --version-string.CompanyName='TE'",
		"package:linux": "electron-packager . --overwrite --platform=linux --arch=x64 --icon=assets/icons/png/1024x1024.png --prune=true --out=release-builds",
		"package": "npm-run-all package:*"
	},
	"dependencies": {
		"electron": "^8.2.5"
	},
	"devDependencies": {
		"@types/jest": "^25.2.1",
		"asar": "^3.0.3",
		"electron-packager": "^14.2.1",
		"jest": "^25.5.4",
		"npm-run-all": "^4.1.5"
	}
}
